<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Appenders>
        <Console name="stdout" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss} %-5level %c{1} %msg%n"/>
        </Console>
        <File name="log" fileName="${sys:logPath}/log.log" immediateFlush="true" append="false">
            <PatternLayout pattern="%d{HH:mm:ss} %-5level %c{1} %msg%n"/>
        </File>
    </Appenders>
    <Loggers>
        <Root level = "INFO">
            <AppenderRef ref="log"/>
            <AppenderRef ref="stdout"/>
        </Root>
    </Loggers>
</Configuration>